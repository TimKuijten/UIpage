<p><script><br />
document.addEventListener('DOMContentLoaded', function(){<br />
  const btn = document.getElementById('toggle-cv-form');<br />
  const form = document.getElementById('cv-form');<br />
  if(btn && form){<br />
    btn.addEventListener('click', function(){<br />
      const open = form.style.display === 'block';<br />
      form.style.display = open ? 'none' : 'block';<br />
      btn.setAttribute('aria-expanded', String(!open));<br />
      btn.textContent = open ? 'Register CV' : 'Hide form';<br />
    });<br />
  }<br />
});<br />
</script></p>
